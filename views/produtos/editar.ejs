<div class="produto-form">
    <h2>Editar Produto</h2>
    
    <% if (locals.error) { %>
        <div class="alerta alerta-erro">
            <%= error %>
        </div>
    <% } %>
    
    <form action="/produtos/<%= produto.id %>/atualizar?_method=PUT" method="POST">
        <div class="grupo-form">
            <label for="nome">Nome do Produto</label>
            <input type="text" id="nome" name="nome" value="<%= produto.nome %>" required>
        </div>
        
        <div class="grupo-form">
            <label for="preco">Preço (R$)</label>
            <input type="number" id="preco" name="preco" step="0.01" min="0" 
                   value="<%= produto.preco %>" required class="campo-preco">
        </div>
        
        <div class="grupo-form">
            <label for="estoque">Quantidade em Estoque</label>
            <input type="number" id="estoque" name="estoque" min="0" 
                   value="<%= produto.estoque %>" required>
        </div>
        
        <div class="acoes-form">
            <a href="/produtos" class="botao botao-secundario">Cancelar</a>
            <button type="submit" class="botao botao-primario">Salvar Alterações</button>
        </div>
    </form>
</div>