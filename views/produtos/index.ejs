<div class="produtos-lista">
    <div class="cabecalho-lista">
        <h2>Lista de Produtos</h2>
        <a href="/produtos/novo" class="botao botao-primario">Novo Produto</a>
    </div>
    
    <% if (produtos && produtos.length > 0) { %>
        <table class="tabela">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                    <th class="acoes">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(function(produto) { %>
                    <tr>
                        <td><%= produto.id %> </td>
                        <td><%= produto.nome %></td>
                        <td class="texto-esquerda">R$ <%= produto.preco.toFixed(2).replace('.', ',') %></td>
                        <td class="texto-esquerda"><%= produto.estoque %></td>
                        <td class="acoes">
                            <a href="/produtos/<%= produto.id %>/mostrar" class="botao botao-pequeno">Ver</a>
                            <a href="/produtos/<%= produto.id %>/editar" class="botao botao-pequeno botao-secundario">Editar</a>
                            <form action="/produtos/<%= produto.id %>/deletar?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" class="botao botao-pequeno botao-perigo" 
                                        onclick="return confirm('Tem certeza que deseja excluir este produto?')">
                                    Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <div class="mensagem-vazio">
            <p>Nenhum produto cadastrado ainda.</p>
            <a href="/produtos/novo" class="botao botao-primario">Cadastrar Produto</a>
        </div>
    <% } %>
</div>
