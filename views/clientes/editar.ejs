<div class="formulario-cliente">
    <h2>Editar Cliente</h2>
    
    <form id="form-cliente" action="/clientes/<%= cliente.id %>/atualizar?_method=PUT" method="POST">
        <div class="grupo-form">
            <label for="nome">Nome Completo:</label>
            <input type="text" id="nome" name="nome" value="<%= cliente.nome %>" required>
        </div>
        
        <div class="grupo-form">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= cliente.email %>" required>
        </div>
        
        <div class="grupo-form">
            <label for="senha">Nova Senha (deixe em branco para manter a atual):</label>
            <input type="password" id="senha" name="senha">
        </div>
        
        <div class="acoes-form">
            <a href="/clientes" class="botao botao-secundario">Cancelar</a>
            <button type="submit" class="botao botao-primario">Atualizar</button>
        </div>
    </form>
</div>